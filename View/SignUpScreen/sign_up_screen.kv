<SignUpScreenView>:
    name: "signup_screen"
    username: username
    phone_number: phone_number
    code_pin: code_pin

    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint:{"center_y": 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release: root.back_to("Splash")

        MDLabel:
            text: "B O N J O U R !"
            font_size: "24sp"
            font_name: "assets/fonts/Poppins-Bold"
            pos_hint:{"center_x": 0.68, "center_y": .85}
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Créer un nouveau compte ici"
            font_size: "13sp"
            font_name: "assets/fonts/Poppins-Medium"
            size_hint_x: .85
            pos_hint:{"center_x": 0.6, "center_y": .77}
            color: rgba(135, 133, 193,255)

    MDFloatLayout:
        size_hint: 0.7,0.07
        pos_hint: {"center_x": 0.5, "center_y": 0.68}

        TextInput:
            id: username
            hint_text: "Nom & Prénom"
            font_name: "assets/fonts/Poppins-Light"
            size_hint_y: 0.75
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False

        MDFloatLayout:
            pos_hint: {"center_x": 0.55, "center_y": 0}
            size_hint_y: 0.03
            md_bg_color: rgba(178, 178, 178, 255)

    MDFloatLayout:
        size_hint: 0.7,0.07
        pos_hint: {"center_x": 0.5, "center_y": 0.56}

        TextInput:
            id: phone_number
            hint_text: "Numéro téléphone"
            font_name: "assets/fonts/Poppins-Light"
            size_hint_y: 0.75
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False

        MDFloatLayout:
            pos_hint: {"center_x": 0.55, "center_y": 0}
            size_hint_y: 0.03
            md_bg_color: rgba(178, 178, 178, 255)


    MDFloatLayout:
        size_hint: 0.7,0.07
        pos_hint: {"center_x": 0.5, "center_y": 0.44}

        TextInput:
            id: code_pin
            hint_text: "Code pin"
            font_name: "assets/fonts/Poppins-Light"
            size_hint_y: 0.75
            pos_hint: {"center_x": 0.55, "center_y": 0.5}
            background_color: 1, 1, 1, 0
            foreground_color: rgba(0, 0, 59, 255)
            cursor_color: rgba(0, 0, 59, 255)
            font_size: "14sp"
            cursor_width: "2sp"
            multiline: False
            password: True

        MDFloatLayout:
            pos_hint: {"center_x": 0.55, "center_y": 0}
            size_hint_y: 0.03
            md_bg_color: rgba(178, 178, 178, 255)

    Button:
        text: "SIGN UP"
        size_hint: .66, .065
        pos_hint: {"center_x": .5, "center_y": .30}
        background_color: 0,0,0,0
        font_name: "assets/fonts/Poppins-Bold"
        on_release: root.on_btn_signup_pressed()
        canvas.before:
            Color:
                rgb: rgba(52,0,231,255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]

    MDLabel:
        text: "or"
        color: rgba(52, 0, 231, 255)
        pos_hint: {"center_y": 0.20}
        font_size: "13sp"
        font_name: "assets/fonts/Poppins-Light"
        halign: "center"

    MDFloatLayout:
        md_bg_color: rgba(178, 178, 178, 255)
        size_hint: .3, .002
        pos_hint: {"center_x": 0.3, "center_y": .198}
    MDFloatLayout:
        md_bg_color: rgba(178, 178, 178, 255)
        size_hint: .3, .002
        pos_hint: {"center_x": 0.7, "center_y": .198}

    MDLabel:
        text: "Vous avez un compte ?"
        font_name: "assets/fonts/Poppins-Bold"
        font_size: "11sp"
        pos_hint: {"center_x": 0.68, "center_y": .1}
        color: rgba(135, 133, 193, 255)

    MDTextButton:
        text: "Log in"
        font_name: "assets/fonts/Poppins-Bold"
        font_size: "13sp"
        pos_hint: {"center_x": 0.75, "center_y": .1}
        color: rgba(52, 0, 231, 255)
        on_release: root.on_btn_login_pressed()