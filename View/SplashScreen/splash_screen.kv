<SplashScreenView>:
    name: "splash"

    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source: "assets/images/logo.png"
            size_hint: 0.25, 0.25
            pos_hint:{"center_x":0.18, "center_y": .90}
        Image:
            source: "assets/images/menu_screen/button.png"
            size_hint: 1.0, 1.0
            pos_hint:{"center_x":0.5, "center_y": .65}

        MDLabel:
            text: "T O U B A  G A Z"
            font_size: "23sp"
            font_name: "assets/fonts/Poppins-Light"
            pos_hint:{"center_y": .38}
            halign: "center"
            color: rgba(34,34,34,255)
        MDLabel:
            text: "Leader de la distribution de gaz au Sénégal"
            font_size: "13sp"
            font_name: "assets/fonts/Poppins-Medium"
            size_hint_x: .85
            pos_hint:{"center_x": 0.5, "center_y": .3}
            halign: "center"
            color: rgba(127,127,127,255)

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0,0,0,0
            font_name: "assets/fonts/Poppins-Bold"
            on_release: root.on_btn_signin_pressed()
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0,0,0,0
            font_name: "assets/fonts/Poppins-Bold"
            color: rgba(52,0,231,255)
            on_release: root.on_btn_signup_pressed()
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100